EditOutputDirName()
{
    if [ "$chnl_status" == "on" ]
    then
        Println "$tip 如果正在监控此频道, 需要先关闭监控"
        ExitOnList n "`gettext \"检测到频道正在运行, 是否现在关闭\"`"
        StopChannel
        echo && echo
    fi
    SetOutputDirName
    jq_path='["channels",'"$chnls_index"',"output_dir_name"]'
    JQ update "$CHANNELS_FILE" "$output_dir_name"
    Println "$info 输出目录名称修改成功 !\n"
}

