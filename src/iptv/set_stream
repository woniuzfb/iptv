    fi
}

SetHeaders()
{
    if [ "${stream_link_parsed:-false}" = true ] 
    then
        Println "  FFmpeg headers: ${green} ${headers:-$i18n_blank} ${normal}\n"
        return 0
    fi

    Println "$tip 多个 header 用 \\\r\\\n 分隔, 可以输入 omit 省略此选项"
    inquirer text_input "请输入 FFmpeg headers: " headers "${d_headers:-$i18n_blank}"

    if [ "$headers" == "omit" ] || [ "$headers" == "$i18n_blank" ]
    then
        headers=""
    fi

    while [[ $headers =~ \\\\ ]]
    do
        headers=${headers//\\\\/\\}
    done

    if [ -n "$headers" ] && [[ ! $headers =~ \\r\\n$ ]]
    then
        headers="$headers\r\n"
    fi
}

